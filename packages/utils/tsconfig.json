{
    "compilerOptions": {
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ES2017",
        "lib": ["ESNext"], 
        "jsx": "react-jsx",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
